<div class="mt-4">

  <h3>Edit course</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" required />
  </div>
  <div class="mb-3">
    <label for="des" class="form-label">Description</label>
    <input type="text" class="form-control" value="{{course.des}}" id="des" name="des" />
  </div>
  <div class="mb-3">
    <label for="img" class="form-label">Image link</label>
    <input type="text" class="form-control" value="{{course.img}}" id="img" name="img" />
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">Video ID</label>
    <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" />
  </div>
  <button type="submit">Submit</button>
</form>

</div>